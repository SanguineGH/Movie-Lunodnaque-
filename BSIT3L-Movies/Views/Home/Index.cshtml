@model List<MovieViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>ID</th>
            <th>Name</th>
            <th class="Preview"></th>
            <th>Rating</th>
            <th>Release Year</th>
            <th>Genre</th>      
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="Clicky" onclick="window.location='/movies/getmovie/@movie.Id';">
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td class="poster-cell">
                    <img src="@movie.Poster" alt="@movie.Name" class="poster" />
                </td>
                <td>@movie.Rating</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
                
            </tr>
        }
    </tbody>
</table>


